{
  "name": "sistema-archivistico",
  "version": "1.0.0",
  "description": "Sistema de gestión documental con roles y edición en línea",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "install-all": "npm install && cd frontend && npm install",
    "migrate": "node migrate-database.js",
    "verify-db": "node verify-postgresql.js"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "fs-extra": "^11.2.0",
    "html-docx-js": "^0.3.1",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
